{% extends 'Layout/Templates/base.html.twig' %}
{% import 'Layout/Templates/macros.html.twig' as macro %}

{% block actionbar %}{% endblock %}

{% block content %}
  {{ form_start(form) }}
  <div class="fork-module-content">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">
          {{ 'lbl.Settings'|trans|ucfirst }}
        </h2>
      </div>
      <div class="panel-body">
        <div class="row fork-module-content">
          <div class="col-lg-12">
            <h4>{{ 'lbl.ContactDetails'|trans|ucfirst }}</h4>
            <hr>
          </div>
          <div class="col-lg-12">
            {{ form_row(form.companyName) }}
          </div>
          <div class="col-lg-6">
            {{ form_row(form.streetName) }}
          </div>
          <div class="col-lg-6">
            {{ form_row(form.streetNumber) }}
          </div>
          <div class="col-lg-4">
            {{ form_row(form.postalCode) }}
          </div>
          <div class="col-lg-4">
            {{ form_row(form.city) }}
          </div>
          <div class="col-lg-4">
            {{ form_row(form.country) }}
          </div>
          <div class="col-lg-6">
            {{ form_row(form.telephone) }}
          </div>
          <div class="col-lg-6">
            {{ form_row(form.email) }}
          </div>
          <div class="col-lg-12">
            <h4>{{ 'lbl.RegisteredOffice'|trans|ucfirst }}</h4>
            <hr>
            <p>{{ 'msg.RegisteredOfficeHelp'|trans|raw }}</p>
            <br>
          </div>
          <div class="col-lg-12">
            {{ form_row(form.registeredOffice) }}
          </div>
          <div class="col-lg-6">
            {{ form_row(form.streetNameRegisteredOffice) }}
          </div>
          <div class="col-lg-6">
            {{ form_row(form.streetNumberRegisteredOffice) }}
          </div>
          <div class="col-lg-4">
            {{ form_row(form.postalCodeRegisteredOffice) }}
          </div>
          <div class="col-lg-4">
            {{ form_row(form.cityRegisteredOffice) }}
          </div>
          <div class="col-lg-4">
            {{ form_row(form.countryRegisteredOffice) }}
          </div>
          <div class="col-lg-12">
            <h4>{{ 'lbl.Other'|trans|ucfirst }}</h4>
            <hr>
          </div>
          <div class="col-lg-12">
            <div class="form-group">
              {{ form_label(form.enterpriseNumber) }}
              <div class="input-group">
                <span class="input-group-addon">
                  <b>BTW BE</b>
                </span>
                {{ form_widget(form.enterpriseNumber) }}
              </div>
            </div>
          </div>
          <div class="col-lg-12">
            <p><i>{{ 'msg.SupervisoryAuthorityHelp'|trans }}</i></p>
            {{ form_row(form.supervisoryAuthority) }}
          </div>
          <div class="col-lg-12">
            <p><i>{{ 'msg.DistrictHelp'|trans }}</i></p>
            {{ form_row(form.district) }}
          </div>
          {{ form_rest(form) }}
        </div>
      </div>
    </div>
  </div>
  <div class="row fork-module-actions">
    <div class="col-md-12">
      <div class="btn-toolbar">
        <div class="btn-group pull-right" role="group">
          {{ macro.buttonIcon('', 'floppy-o', 'lbl.Save'|trans|ucfirst, 'btn-primary', { "type":"submit", "id":"save", "name":"save"} ) }}
        </div>
      </div>
    </div>
  </div>
  {{ form_end(form) }}
{% endblock %}
